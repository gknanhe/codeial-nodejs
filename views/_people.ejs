<div class="peopleContainer">
  <a href="/users/profile/<%= u.id %>" class="friendsItem">
    <div class="friendUser">
      <% if(u.avatar){ %>
      <img
        class="user-avatar create-post-avatar"
        src="<%= u.avatar %>"
        alt="<%= u.name %>"
        onclick="window.location.href='/users/profile/<%=post.user._id%>'"
        onerror="this.onerror=null; this.src=`<%= assetPath('images/empty-avatar.png') %>`"
        loading="lazy"
      />
      <% }else{ %>
      <img
        class="user-avatar create-post-avatar"
        src="<%= assetPath('images/empty-avatar.png') %>"
        alt="<%= post.user.name %>"
        onclick="window.location.href='/users/profile/<%=post.user._id%>'"
        onerror="this.onerror=null; this.src=`<%= assetPath('images/empty-avatar.png') %>`"
        loading="lazy"
      />
      <% } %>
      <!-- <img src="<%= u.avatar %>" alt="img" /> -->
      <div class="friendName"><%= u.name %></div>
    </div>
  </a>
</div>
