<!-- rest part is not needed -->
<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/chat_box.css">


<div id="home-container">

    <section id="feed-post">
        <!-- add a check if user is  not authenticated dont show form -->
        <h4>Posts</h4>
        <% if ( locals.user ){%>
            
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea id="form-input" name="content" cols="30" rows="3" placeholder="Type Something...." required></textarea>
                <input type="submit" value="Post">
            </form>
            <%}%>



                <div id="post-list-container">
                    <ul>
                        <% for( post of posts ) { %>

                            <!-- including partials -->
                            <%- include('_post') -%>

                                <% } %>
                    </ul>
                </div>
    </section>
    <div class="chat-section">
        <%- include('_chat_box') -%>
    </div>
    <section id="user-friends">
        <div id="people">
            <h4>People</h4>
        <% for(u of all_users) { %>
            <p>
                <a href="/users/profile/<%= u.id %>">
                    <%= u.name %>
                </a>
            </p>
            <% } %>
        </div>
        <div id="friends">
            <h4>Friends</h4>
        <% for(u of friends){%>
            <p><a href="/users/profile/<%=u.to_user.id%>"><%=u.to_user.name %></a></p>
        <%}%>
        </div> 
    </section>


</div>
<!-- importing this scripts for creating the comments  -->
